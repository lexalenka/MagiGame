<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw Mana"
        android:id="@+id/buttonMana"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="79dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Spell"
        android:id="@+id/buttonSpell"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonMana"
        android:layout_marginStart="36dp" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton7"
        android:background="#ffffff"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/buttonMana"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton8"
        android:background="#ffffff"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton9"
        android:background="#a3a3a3"
        android:layout_above="@+id/imageButton8"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton10"
        android:background="@color/design_textinput_error_color_dark"
        android:layout_above="@+id/imageButton7"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton11"
        android:background="@color/design_textinput_error_color_dark"
        android:layout_alignTop="@+id/imageButton10"
        android:layout_alignStart="@+id/imageButton8" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton12"
        android:background="@color/design_textinput_error_color_dark"
        android:layout_above="@+id/imageButton11"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton13"
        android:background="@color/design_textinput_error_color_dark"
        android:layout_alignTop="@+id/imageButton12"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton14"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton15"
        android:background="#ffffff"
        android:layout_alignTop="@+id/imageButton14"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton16"
        android:background="#a3a3a3"
        android:layout_below="@+id/imageButton14"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SweetDoge"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton17"
        android:background="@android:color/holo_blue_bright"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>